    <EditTextPreference
        android:key="ftpHost"
        android:name="ftpHost"
        android:defaultValue=""
        android:title="@string/ftp_host"
        android:inputType="textUri" />
    <EditTextPreference
        android:key="ftpPort"
        android:name="ftpPort"
        android:defaultValue="21"
        android:title="@string/ftp_port"
        android:inputType="number" />
    <EditTextPreference
        android:key="ftpRemoteDir"
        android:name="ftpRemoteDir"
        android:defaultValue=""
        android:title="@string/ftp_remotedir"
        android:inputType="text" />
    <EditTextPreference
        android:key="ftpUserId"
        android:name="ftpUserId"
        android:defaultValue=""
        android:title="@string/ftp_userid"
        android:inputType="text" />
    <EditTextPreference
        android:key="ftpPassword"
        android:name="ftpPassword"
        android:defaultValue=""
        android:title="@string/ftp_password"
        android:inputType="textPassword" />
	<!--
