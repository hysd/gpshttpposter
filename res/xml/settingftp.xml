    <EditTextPreference
        android:key="ftpTimeout"
        android:name="ftpTimeout"
        android:defaultValue="30"
        android:title="@string/ftp_timeout"
        android:inputType="number" />
    <CheckBoxPreference
        android:key="ftpPassive"
        android:name="ftpPassive"
        android:defaultValue="true"
        android:title="@string/ftp_passive" />
</PreferenceScreen>